---

<section>
  <div class="mx-auto px-8 md:px-32 py-12 max-w-7xl">
    <h2
      class="text-slate-900 text-3xl font-normal tracking-tighter lg:text-4xl"
    >
      Overview
    </h2>
    <div class="mt-10 space-y-24">
      {
        pageData.map((page) => (
          <div>
            <h2 class="text-slate-900 text-3xl font-normal tracking-tighter">
              {page.title}
            </h2>
            <div class="grid grid-cols-2 gap-12 lg:grid-cols-5 md:grid-cols-3">
              {page.sections.map((section) => (
                <div class="text-sm mt-10">
                  <div class="flex flex-col justify-start">
                    <p class="text-regent-900 font-medium lg:text-xl text-lg">
                      {section.title}
                    </p>
                    {section.links.map((link, i) => (
                      <a
                        class="text-base hover:text-purple-500 text-slate-500 mt-2"
                        title={link.label}
                        aria-label={link.label}
                        href={link.href}
                      >
                        {link.label}
                      </a>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
