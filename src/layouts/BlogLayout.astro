---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;

---

<BaseLayout>
  <div class="mx-auto px-8 py-12 max-w-7xl">
    <div class="mx-auto text-center">
      <h1
        class="text-slate-900 text-3xl font-normal tracking-tight lg:text-4xl font-display">
        {frontmatter.title}
      </h1>
      <p class="text-slate-500 text-base mt-4">
        <em>{frontmatter.description}</em>
      </p>
      <div class="text-slate-400 text-xs mt-4">
        <p>
          {frontmatter.pubDate.toString().slice(0, 10)} - {frontmatter.author}
        </p>
      </div>
      <div class="flex flex-wrap gap-3 mt-12 justify-center">
        {
          frontmatter.tags.map((tag) => (
            <span class="inline-flex items-center rounded-md bg-purple-50/20 px-2 py-1 text-xs font-medium text-purple-700 ring-1 ring-inset ring-purple-700/5">
              <a href={`/tags/${tag}`}>{tag}</a>
            </span>
          ))
        }
      </div>
    </div>
    <img
      class="h-[50vh] w-full mt-12 object-cover object-center rounded-3xl mx-auto"
      src={frontmatter.image.url}
      alt={frontmatter.image.alt}
    />
  </div>
  <div
    class="prose-styles">
    <slot />
  </div>
</BaseLayout>
